[user]
	name = gmkv
	email = gmkv@localhost
[pull]
	rebase = true
[auto]
	clrf = false
[alias]
	logtree = log --oneline --graph --decorate --all
	l = log --graph --abbrev-commit --date=relative
	st = status
	ci = commit
	ca = commit --amend
	can = commit --amend --no-edit
	co = checkout
	di = diff
	dc = diff --cached
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	p = push
	b = branch
	ds = diff --stat=160,120
	sync = !git fetch origin && git rebase origin/master
[format]
	pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[init]
	defaultBranch = main
